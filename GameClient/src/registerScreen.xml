<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
   <useStyles filename="nifty-default-styles.xml" />
   <useControls filename="nifty-default-controls.xml" />
   <screen id="register" controller="com.whiuk.philip.mmorpg.client.RegisterScreen">
      <layer id="layer" backgroundColor="#000f" childLayout="center">
        <panel id="panel" height="350" width="35%" align="center" valign="center" backgroundColor="#222f" childLayout="center" visibleToMouse="false">
          <interact onClick="quit()"/>
	      <panel id="panel-centre" height="340" width="100%" align="center" valign="top" backgroundColor="#222f" childLayout="center" visibleToMouse="false">
		<panel id="panel-header" height="40" width="100%" align="left" valign="top" backgroundColor="#222f" childLayout="center" visibleToMouse="false">
	       	<text id="header" font="aurulent-sans-16.fnt" color="#ffff" text="Register!" align="center" valign="center" />
	       </panel>
	      	<panel id="panel-centre-left-margin" height="300" width="6%" align="left" valign="bottom" backgroundColor="#555f" childLayout="center" visibleToMouse="false">
	      	</panel>
	       <panel id="form" height="300" width="89%" backgroundColor="#555f" align="center" valign="bottom"  visibleToMouse="false" childLayout="center" >
	          	<panel id="form-top" height="120" width="100%" align="left" valign="top" backgroundColor="#555f" childLayout="center" visibleToMouse="false">
	           	<panel id="form-username" height="40" width="100%" align="left" valign="top" backgroundColor="#555f" childLayout="center" visibleToMouse="false">
	           		<text id="username" font="aurulent-sans-16.fnt" color="#ffff" text="Username" align="left" valign="center" />
	           		<control name="textfield" id="text_input_username" width="40%" align="right" valign="center" />
	        	</panel>
	        	<panel id="form-password" height="40" width="100%" align="left" valign="center" backgroundColor="#555f" childLayout="center" visibleToMouse="false">
					<text id="password" font="aurulent-sans-16.fnt" color="#ffff" text="Password" align="left" valign="center" />
		       		<control name="textfield" id="text_input_password" width="40%" align="right" passwordChar="*" />
	        	</panel>
	        	<panel id="form-password-confirm" height="40" width="100%" align="left" valign="bottom" backgroundColor="#555f" childLayout="center" visibleToMouse="false">
					<text id="password-confirm" font="aurulent-sans-16.fnt" color="#ffff" text="Password (confirm)" align="left" valign="center" />
		       		<control name="textfield" id="text_input_password_confirm" width="40%" align="right" passwordChar="*" />
	        	</panel>
	       	</panel>
	       	<panel id="form-email" height="40" width="100%" align="left" valign="center" backgroundColor="#555f" childLayout="center" visibleToMouse="false">
				<text id="email" font="aurulent-sans-16.fnt" color="#ffff" text="Email" align="left" valign="center" />
	       		<control name="textfield" id="text_input_email" width="40%" align="right" />
	       	</panel>
	       	<panel id="form-bottom" height="60" width="100%" align="left" valign="bottom" backgroundColor="#555f" childLayout="center" visibleToMouse="false">
	       		<control name="button" id="submit_button" label="Register" valign="center">
					<interact onClick="sendRegistrationRequest()" />
				</control>
	       	</panel>
	      	</panel>
	      	<panel id="panel-centre-right-margin" height="300" width="6%" align="right" valign="bottom" backgroundColor="#555f" childLayout="center" visibleToMouse="false">
	      	</panel>
	</panel>
	      <panel id="panel-bottom-margin" height="10" width="100%" align="center" valign="bottom" backgroundColor="#222f" childLayout="center" visibleToMouse="false">
	      </panel>
	    </panel>
	    </layer>
	</screen>
</nifty>
